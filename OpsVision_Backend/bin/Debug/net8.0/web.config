<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<system.webServer>

		<!-- ðŸ” Enable Windows Authentication -->
		<security>
			<authentication>
				<windowsAuthentication enabled="true" />
				<anonymousAuthentication enabled="false" />
			</authentication>
		</security>

		<!-- ðŸ” Inject x-remote-user from IIS -->
		<rewrite>
			<rules>
				<rule name="InjectRemoteUser" stopProcessing="true">
					<match url=".*" />
					<serverVariables>
						<set name="HTTP_X_REMOTE_USER" value="{LOGON_USER}" />
					</serverVariables>
					<action type="None" />
				</rule>
			</rules>
		</rewrite>

	</system.webServer>
</configuration>

